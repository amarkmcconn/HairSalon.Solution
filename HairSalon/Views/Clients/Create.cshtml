@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="container">
  <h4>Add a new client</h4>
  <img src='~/img/giphy.gif'>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>@Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber)
    <br>@Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br><input type="submit" value="Add Client" class="btn btn-success" />
  }
  <br> @using (Html.BeginForm("Index", "Clients", FormMethod.Get))
  {
    <input type="submit" value="Show all Clients" class="btn btn-success">
  }
</div>  