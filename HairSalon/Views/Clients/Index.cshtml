@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="container">
<h2>Client List</h2>

@if (@Model.Count == 0)
{
  <h4>No Clients have been added</h4>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
}

<p>@Html.ActionLink("Add more clients", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

</div>
