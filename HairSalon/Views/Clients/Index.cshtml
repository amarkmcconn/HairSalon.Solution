@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="container">
  <h2>Client List</h2>
  <img src='~/img/client.jpeg'>
  @if (@Model.Count == 0)
  {
    <h4>No Clients have been added</h4>
  }

  <table>
    <tr>
      <th>Client</th>
      <th>Client Phone Number</th>
      <th>Client Pronouns</th>
      <th>Client Email</th>
      <th>Current Stylist</th>
    </tr>
    @foreach (Client client in Model)
    {
      <tr>
       <td>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</td> 
       <td>@client.PhoneNumber</td>
       <td>@client.Pronoun</td>
       <td>@client.Email</td>
       <td>@client.Stylist.Name </td>
      </tr>
    }
  </table>
  
  <br>@using (Html.BeginForm("Create", "Clients", FormMethod.Get))
  {
    <input type="submit" value="Add more Clients" class="btn btn-success">
  }

  <br>@using (Html.BeginForm("Create", "Stylists", FormMethod.Get))
  {
    <input type="submit" value="Add more Stylists" class="btn btn-primary">
  }

  <br>@using (Html.BeginForm("Index", "Home", FormMethod.Get))
  {
    <input type="submit" value="Home" class="btn btn-secondary">
  }
</div>
