@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div>
  <h4>Add a new Stylist</h4>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <input type="submit" value="Add a new Stylist" />
  }
  <p>@Html.ActionLink("Show all Stylists", "Index")</p>
  <p>@Html.HiddenFor(model => model.StylistId)</p>
</div>